@model AcademicYearListViewModel
@{ ViewData["Title"] = "Academic Year Management"; ViewData["UserRole"] = "Admin"; }

<div class="flex flex-col md:flex-row md:items-end justify-between gap-4 mb-8">
    <div>
        <h2 class="text-3xl font-black text-slate-900 dark:text-white tracking-tight">Academic Year Management</h2>
        <p class="text-slate-500 dark:text-slate-400 mt-1">Configure, archive, and prepare school sessions with precision.</p>
    </div>
    <button onclick="document.getElementById('createModal').classList.remove('hidden')" class="bg-primary hover:bg-primary/90 text-white px-6 py-2.5 rounded-xl font-bold flex items-center gap-2 shadow-lg shadow-primary/20 transition-all">
        <span class="material-symbols-outlined text-xl">add</span> Create New Year
    </button>
</div>

<!-- Current Active Session -->
@if (Model.ActiveYear != null)
{
    <section class="mb-10">
        <div class="flex items-center gap-2 mb-4">
            <span class="material-symbols-outlined text-primary">event_available</span>
            <h3 class="text-lg font-bold">Current Active Session</h3>
        </div>
        <div class="bg-white dark:bg-surface-dark rounded-[20px] shadow-sm border border-slate-100 dark:border-slate-700/50 overflow-hidden flex flex-col lg:flex-row">
            <div class="lg:w-1/4 bg-gradient-to-br from-primary to-blue-600 p-8 flex flex-col justify-center items-center text-white">
                <span class="material-symbols-outlined text-6xl mb-4 opacity-80">calendar_month</span>
                <span class="bg-emerald-500/20 text-emerald-200 text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wider">Active</span>
            </div>
            <div class="flex-1 p-8 flex flex-col justify-between">
                <div class="flex justify-between items-start">
                    <div>
                        <h4 class="text-4xl font-black text-slate-900 dark:text-white mb-2 leading-tight">Session @Model.ActiveYear.Name</h4>
                        <div class="flex items-center gap-4 text-slate-500 dark:text-slate-400">
                            <div class="flex items-center gap-1.5">
                                <span class="material-symbols-outlined text-lg">calendar_month</span>
                                <span class="font-medium">@Model.ActiveYear.StartDate.ToString("dd-MMM-yyyy") to @Model.ActiveYear.EndDate.ToString("dd-MMM-yyyy")</span>
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <p class="text-slate-400 dark:text-slate-500 text-xs font-bold uppercase tracking-widest mb-1">Enrolled Students</p>
                        <p class="text-4xl font-black text-primary leading-none">@Model.ActiveYear.StudentCount</p>
                    </div>
                </div>
                    <div class="mt-8 pt-6 border-t border-slate-100 dark:border-slate-700 flex flex-wrap gap-4 items-center justify-end">
                    <button onclick="openEditModal(@Model.ActiveYear.Id, '@Model.ActiveYear.Name', '@Model.ActiveYear.StartDate.ToString("yyyy-MM-dd")', '@Model.ActiveYear.EndDate.ToString("yyyy-MM-dd")')"
                            class="px-5 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 text-slate-700 dark:text-slate-300 font-semibold hover:bg-slate-50 dark:hover:bg-surface-dark-hover transition-all flex items-center gap-2">
                        <span class="material-symbols-outlined text-lg">edit</span> Edit
                    </button>
                    <a asp-area="Admin" asp-controller="Reports" asp-action="Index" class="px-5 py-2.5 rounded-xl bg-primary text-white font-semibold shadow-lg shadow-primary/20 hover:scale-[1.02] transition-transform">View Analytics</a>
                </div>
            </div>
        </div>
    </section>
}

<!-- Year Archive -->
<section>
    <div class="flex items-center justify-between mb-4">
        <div class="flex items-center gap-2">
            <span class="material-symbols-outlined text-slate-400">history</span>
            <h3 class="text-lg font-bold">All Sessions</h3>
        </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var year in Model.Years.Where(y => !y.IsActive))
        {
            <div class="bg-white dark:bg-surface-dark rounded-[20px] p-6 shadow-sm border border-slate-100 dark:border-slate-700/50 group hover:border-primary/30 transition-all">
                <div class="flex justify-between items-start mb-4">
                    <span class="bg-slate-100 text-slate-600 text-[10px] font-bold px-2.5 py-1 rounded-full uppercase tracking-wider">Completed</span>
                    <span class="material-symbols-outlined text-slate-300 group-hover:text-primary transition-colors">verified</span>
                </div>
                <h4 class="text-2xl font-bold text-slate-900 dark:text-white mb-1">Session @year.Name</h4>
                <p class="text-slate-500 dark:text-slate-400 text-sm mb-6 flex items-center gap-1.5">
                    <span class="material-symbols-outlined text-base">calendar_today</span>
                    @year.StartDate.ToString("dd-MMM-yy") ï¿½ @year.EndDate.ToString("dd-MMM-yy")
                </p>
                <div class="grid grid-cols-2 gap-4 mb-6">
                    <div class="bg-slate-50 dark:bg-surface-dark-hover p-3 rounded-xl">
                        <p class="text-[10px] uppercase font-bold text-slate-400 dark:text-slate-500 mb-0.5">Students</p>
                        <p class="text-lg font-bold text-slate-700 dark:text-slate-200">@year.StudentCount</p>
                    </div>
                </div>
                <div class="flex flex-col gap-2">
                    <form asp-action="SetActive" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="yearId" value="@year.Id" />
                        <button type="submit" class="w-full flex items-center justify-center gap-2 py-2.5 rounded-xl border border-primary/20 text-primary font-bold text-sm hover:bg-primary hover:text-white transition-all">
                            <span class="material-symbols-outlined text-lg">swap_horiz</span> Switch Active Year
                        </button>
                    </form>
                    <div class="flex gap-2">
                        <button onclick="openEditModal(@year.Id, '@year.Name', '@year.StartDate.ToString("yyyy-MM-dd")', '@year.EndDate.ToString("yyyy-MM-dd")')"
                                class="flex-1 flex items-center justify-center gap-1 py-2 rounded-xl border border-slate-200 dark:border-slate-600 text-slate-600 dark:text-slate-300 font-semibold text-sm hover:bg-slate-50 dark:hover:bg-surface-dark-hover transition-all">
                            <span class="material-symbols-outlined text-base">edit</span> Edit
                        </button>
                        <form asp-action="Delete" method="post" class="flex-1">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@year.Id" />
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this academic year?')"
                                    class="w-full flex items-center justify-center gap-1 py-2 rounded-xl border border-red-200 text-red-600 font-semibold text-sm hover:bg-red-50 transition-all">
                                <span class="material-symbols-outlined text-base">delete</span> Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }

        <!-- Create Placeholder -->
        <div onclick="document.getElementById('createModal').classList.remove('hidden')" class="border-2 border-dashed border-slate-200 dark:border-slate-600 rounded-[20px] p-6 flex flex-col items-center justify-center text-center group cursor-pointer hover:border-primary/40 transition-colors min-h-[220px]">
            <div class="h-14 w-14 rounded-full bg-slate-100 dark:bg-surface-dark-hover flex items-center justify-center text-slate-400 group-hover:bg-primary group-hover:text-white transition-all mb-4">
                <span class="material-symbols-outlined text-3xl">add</span>
            </div>
            <h4 class="font-bold text-slate-400 group-hover:text-slate-900 dark:group-hover:text-white">Create New Year</h4>
            <p class="text-xs text-slate-400 dark:text-slate-500 mt-1">Add upcoming academic session</p>
        </div>
    </div>
</section>

<!-- Create Modal -->
<div id="createModal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4">
    <div class="bg-white dark:bg-surface-dark rounded-2xl p-8 max-w-lg w-full shadow-2xl">
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-xl font-bold dark:text-white">Create New Academic Year</h3>
            <button onclick="document.getElementById('createModal').classList.add('hidden')" class="text-slate-400 hover:text-slate-600">
                <span class="material-symbols-outlined">close</span>
            </button>
        </div>
        <form asp-action="Create" method="post" class="space-y-5">
            @Html.AntiForgeryToken()
            <div class="space-y-2">
                <label class="text-sm font-semibold text-slate-700">Session Name</label>
                <input name="name" class="w-full rounded-xl border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="e.g. 2025-26" required />
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div class="space-y-2">
                    <label class="text-sm font-semibold text-slate-700">Start Date</label>
                    <input name="startDate" type="date" class="w-full rounded-xl border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" required />
                </div>
                <div class="space-y-2">
                    <label class="text-sm font-semibold text-slate-700">End Date</label>
                    <input name="endDate" type="date" class="w-full rounded-xl border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" required />
                </div>
            </div>
            <button type="submit" class="w-full bg-primary text-white font-bold py-3 rounded-xl shadow-lg shadow-primary/20 hover:bg-primary/90 transition-all flex items-center justify-center gap-2">
                <span class="material-symbols-outlined">add</span> Create Academic Year
            </button>
        </form>
    </div>
</div>

<!-- Edit Modal -->
<div id="editModal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4">
    <div class="bg-white dark:bg-surface-dark rounded-2xl p-8 max-w-lg w-full shadow-2xl">
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-xl font-bold dark:text-white">Edit Academic Year</h3>
            <button onclick="document.getElementById('editModal').classList.add('hidden')" class="text-slate-400 hover:text-slate-600">
                <span class="material-symbols-outlined">close</span>
            </button>
        </div>
        <form asp-action="Edit" method="post" class="space-y-5">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" id="editYearId" />
            <div class="space-y-2">
                <label class="text-sm font-semibold text-slate-700">Session Name</label>
                <input name="name" id="editYearName" class="w-full rounded-xl border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" required />
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div class="space-y-2">
                    <label class="text-sm font-semibold text-slate-700">Start Date</label>
                    <input name="startDate" id="editYearStart" type="date" class="w-full rounded-xl border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" required />
                </div>
                <div class="space-y-2">
                    <label class="text-sm font-semibold text-slate-700">End Date</label>
                    <input name="endDate" id="editYearEnd" type="date" class="w-full rounded-xl border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" required />
                </div>
            </div>
            <button type="submit" class="w-full bg-primary text-white font-bold py-3 rounded-xl shadow-lg shadow-primary/20 hover:bg-primary/90 transition-all flex items-center justify-center gap-2">
                <span class="material-symbols-outlined">save</span> Update Academic Year
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function openEditModal(id, name, startDate, endDate) {
            document.getElementById('editYearId').value = id;
            document.getElementById('editYearName').value = name;
            document.getElementById('editYearStart').value = startDate;
            document.getElementById('editYearEnd').value = endDate;
            document.getElementById('editModal').classList.remove('hidden');
        }
    </script>
}
