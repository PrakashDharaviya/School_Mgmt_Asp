@model SchoolEduERP.Models.Domain.ClassSection
@{
    ViewData["Title"] = "Add Class Section";
}

<div class="mb-8">
    <nav class="flex mb-2 text-sm text-slate-500">
        <ol class="flex items-center space-x-2">
            <li><a asp-action="Index" class="hover:text-primary">Class Sections</a></li>
            <li><span class="material-symbols-outlined text-sm">chevron_right</span></li>
            <li class="text-primary font-medium">Add</li>
        </ol>
    </nav>
    <h2 class="text-2xl font-bold text-slate-900">Add Class &amp; Division</h2>
</div>

<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 md:p-8 max-w-lg">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="text-red-600 text-sm bg-red-50 p-3 rounded-lg mb-4"></div>

        <div class="space-y-5">
            <div class="space-y-2">
                <label asp-for="ClassName" class="text-xs font-semibold text-slate-500 uppercase tracking-wider">Standard</label>
                <select asp-for="ClassName" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3">
                    <option value="">-- Select Standard --</option>
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i">Std @i</option>
                    }
                </select>
                <span asp-validation-for="ClassName" class="text-red-500 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label asp-for="Section" class="text-xs font-semibold text-slate-500 uppercase tracking-wider">Division</label>
                <select asp-for="Section" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3">
                    <option value="">-- Select Division --</option>
                    @foreach (var div in new[] { "A", "B", "C", "D", "E" })
                    {
                        <option value="@div">@div</option>
                    }
                </select>
                <span asp-validation-for="Section" class="text-red-500 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label asp-for="Capacity" class="text-xs font-semibold text-slate-500 uppercase tracking-wider">Capacity</label>
                <input asp-for="Capacity" type="number" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="40" />
            </div>
        </div>

        <div class="flex items-center gap-3 mt-6">
            <a asp-action="Index" class="px-6 py-2.5 rounded-lg text-slate-600 font-semibold text-sm hover:bg-slate-50">Cancel</a>
            <button type="submit" class="px-8 py-2.5 rounded-lg bg-primary text-white font-bold text-sm shadow-lg shadow-primary/30 hover:bg-primary/90 transition-all">Create</button>
        </div>
    </form>
</div>
