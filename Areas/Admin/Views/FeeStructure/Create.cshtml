@model FeeStructureViewModel
@{ ViewData["Title"] = "Add Fee Head"; ViewData["UserRole"] = "Admin"; }

<div class="mb-8">
    <nav class="flex mb-2 text-sm text-slate-500">
        <ol class="flex items-center space-x-2">
            <li><a asp-action="Index" class="hover:text-primary">Fee Structure</a></li>
            <li><span class="material-symbols-outlined text-sm">chevron_right</span></li>
            <li class="text-primary font-medium">Add Fee Head</li>
        </ol>
    </nav>
    <h2 class="text-3xl font-extrabold text-slate-900">Add Fee Head</h2>
</div>

<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 md:p-8 max-w-2xl">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm bg-red-50 p-3 rounded-lg mb-4"></div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div class="space-y-2">
                <label asp-for="Name" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="Name" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="e.g. Tuition Fee" />
                <span asp-validation-for="Name" class="text-red-500 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label asp-for="Amount" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="Amount" type="number" step="0.01" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="18000" />
                <span asp-validation-for="Amount" class="text-red-500 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label asp-for="ApplicableClass" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="ApplicableClass" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="e.g. Class X or All" />
            </div>
            <div class="space-y-2">
                <label asp-for="AcademicYearId" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <select asp-for="AcademicYearId" asp-items="@(new SelectList(Model.AcademicYears, "Id", "Name"))" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3">
                    <option value="">Select Year</option>
                </select>
                <span asp-validation-for="AcademicYearId" class="text-red-500 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label asp-for="DueDate" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="DueDate" type="date" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
                <span asp-validation-for="DueDate" class="text-red-500 text-xs"></span>
            </div>
        </div>

        <div class="flex items-center gap-3">
            <a asp-action="Index" class="px-6 py-2.5 rounded-lg text-slate-600 font-semibold text-sm hover:bg-slate-50">Cancel</a>
            <button type="submit" class="flex items-center gap-2 px-8 py-2.5 rounded-lg bg-primary text-white font-bold text-sm shadow-lg shadow-primary/30 hover:bg-primary/90 transition-all">
                <span class="material-symbols-outlined text-sm">save</span> Create Fee Head
            </button>
        </div>
    </form>
</div>
