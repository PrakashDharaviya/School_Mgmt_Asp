@model SalaryViewModel
@{ ViewData["Title"] = "Edit Salary Record"; ViewData["UserRole"] = "Admin"; }

<div class="mb-8">
    <h2 class="text-3xl font-extrabold text-slate-900">Edit Salary Record</h2>
    <p class="text-slate-500 mt-1">Update the salary payout details.</p>
</div>

<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 md:p-8 max-w-2xl">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm bg-red-50 p-3 rounded-lg mb-4"></div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div class="space-y-2">
                <label asp-for="TeacherId" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <select asp-for="TeacherId" asp-items="@(new SelectList(Model.Teachers, "Id", "Name"))" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3">
                    <option value="">Select Teacher</option>
                </select>
            </div>
            <div class="space-y-2">
                <label asp-for="Month" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="Month" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="e.g. January 2025" />
            </div>
            <div class="space-y-2">
                <label asp-for="BasicSalary" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="BasicSalary" type="number" step="0.01" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
            </div>
            <div class="space-y-2">
                <label asp-for="Allowances" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="Allowances" type="number" step="0.01" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
            </div>
            <div class="space-y-2">
                <label asp-for="Deductions" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="Deductions" type="number" step="0.01" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
            </div>
            <div class="space-y-2">
                <label asp-for="PaymentDate" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="PaymentDate" type="date" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
            </div>
            <div class="space-y-2">
                <label asp-for="Status" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <select asp-for="Status" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3">
                    <option value="Pending">Pending</option>
                    <option value="Paid">Paid</option>
                </select>
            </div>
        </div>

        <div class="flex items-center gap-3">
            <a asp-action="Index" class="px-6 py-2.5 rounded-lg text-slate-600 font-semibold text-sm hover:bg-slate-50">Cancel</a>
            <button type="submit" class="flex items-center gap-2 px-8 py-2.5 rounded-lg bg-primary text-white font-bold text-sm shadow-lg shadow-primary/30 hover:bg-primary/90 transition-all">
                <span class="material-symbols-outlined text-sm">save</span> Update Salary Record
            </button>
        </div>
    </form>
</div>
