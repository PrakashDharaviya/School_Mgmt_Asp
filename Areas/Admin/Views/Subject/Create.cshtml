@model SchoolEduERP.Models.Domain.Subject
@{
    ViewData["Title"] = "Add Subject";
}

<form asp-action="Create" method="post" class="max-w-xl bg-white p-6 rounded-lg shadow">
    @Html.AntiForgeryToken()
    <div class="mb-4">
        <label class="block text-sm font-medium">Standard</label>
        <input asp-for="Standard" class="w-full rounded border px-3 py-2" />
        <span asp-validation-for="Standard" class="text-red-600 text-xs"></span>
    </div>
    <div class="mb-4">
        <label class="block text-sm font-medium">Name</label>
        <input asp-for="Name" class="w-full rounded border px-3 py-2" />
        <span asp-validation-for="Name" class="text-red-600 text-xs"></span>
    </div>
    <div class="mb-4">
        <label class="block text-sm font-medium">Teacher</label>
        <select asp-for="TeacherId" class="w-full rounded border px-3 py-2">
            <option value="">-- Select Teacher --</option>
            @foreach (var t in (IEnumerable<SchoolEduERP.Models.Domain.Teacher>)ViewBag.Teachers)
            {
                <option value="@t.Id">@t.FirstName @t.LastName</option>
            }
        </select>
    </div>
    <div class="text-right">
        <button type="submit" class="px-4 py-2 bg-primary text-white rounded">Create</button>
    </div>
</form>