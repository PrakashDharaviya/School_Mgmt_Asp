@model TeacherViewModel
@{ ViewData["Title"] = "Add Teacher"; ViewData["UserRole"] = "Admin"; }

<div class="mb-8">
    <nav class="flex mb-2 text-sm text-slate-500">
        <ol class="flex items-center space-x-2">
            <li><a asp-action="Index" class="hover:text-primary">Teachers</a></li>
            <li><span class="material-symbols-outlined text-sm">chevron_right</span></li>
            <li class="text-primary font-medium">Add Teacher</li>
        </ol>
    </nav>
    <h2 class="text-3xl font-extrabold text-slate-900">Add New Teacher</h2>
</div>

<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 md:p-8 max-w-3xl">
    <form asp-action="Create" asp-area="Admin" asp-controller="Teacher" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm bg-red-50 p-3 rounded-lg mb-4"></div>

        @* ── Personal Info ── *@
        <h3 class="text-sm font-bold text-primary mb-4 flex items-center gap-2">
            <span class="material-symbols-outlined !text-[18px]">badge</span> Personal Information
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div class="space-y-2">
                <label asp-for="EmployeeId" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="EmployeeId" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="e.g. TCH-001" />
                <span asp-validation-for="EmployeeId" class="text-red-500 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label asp-for="JoiningDate" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="JoiningDate" type="date" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
            </div>
            <div class="space-y-2">
                <label asp-for="FirstName" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="FirstName" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="First Name" />
                <span asp-validation-for="FirstName" class="text-red-500 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label asp-for="LastName" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="LastName" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="Last Name" />
                <span asp-validation-for="LastName" class="text-red-500 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label asp-for="Email" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="Email" type="email" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="teacher@school.com" />
                <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label asp-for="Phone" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="Phone" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="+91 9876543210" />
            </div>
            <div class="space-y-2">
                <label asp-for="Specialization" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="Specialization" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="e.g. Mathematics" />
            </div>
            <div class="space-y-2">
                <label asp-for="Qualification" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="Qualification" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="e.g. M.Sc., B.Ed." />
            </div>
        </div>

        @* ── Login Credentials ── *@
        <div class="mb-6 p-4 rounded-xl bg-amber-50/60 border border-amber-100">
            <h3 class="text-sm font-bold text-amber-700 mb-3 flex items-center gap-2">
                <span class="material-symbols-outlined !text-[18px]">lock</span> Login Credentials
                <span class="text-xs font-normal text-slate-500 ml-1">(set the teacher's portal password)</span>
            </h3>
            <div class="mb-3 p-2.5 rounded-lg bg-amber-100/60 text-xs text-amber-800 flex items-start gap-2">
                <span class="material-symbols-outlined !text-[15px] mt-0.5">info</span>
                Password must be <strong>at least 6 characters</strong> and include:
                <strong>1 uppercase letter</strong>, <strong>1 digit</strong>, and <strong>1 special character</strong>
                (e.g.&nbsp;<code>Teacher@1</code>)
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="space-y-2">
                    <label asp-for="Password" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                    <input asp-for="Password" type="password"
                           class="w-full rounded-lg border-slate-200 bg-white focus:ring-primary focus:border-primary text-sm py-3"
                           placeholder="Min 6 chars, 1 uppercase, 1 digit, 1 special" autocomplete="new-password" />
                    <span asp-validation-for="Password" class="text-red-500 text-xs"></span>
                </div>
                <div class="space-y-2">
                    <label asp-for="ConfirmPassword" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                    <input asp-for="ConfirmPassword" type="password"
                           class="w-full rounded-lg border-slate-200 bg-white focus:ring-primary focus:border-primary text-sm py-3"
                           placeholder="Repeat password" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs"></span>
                </div>
            </div>
        </div>

        <div class="flex items-center gap-3">
            <a asp-action="Index" class="px-6 py-2.5 rounded-lg text-slate-600 font-semibold text-sm hover:bg-slate-50 transition-colors">Cancel</a>
            <button type="submit" class="flex items-center gap-2 px-8 py-2.5 rounded-lg bg-primary text-white font-bold text-sm shadow-lg shadow-primary/30 hover:bg-primary/90 transition-all">
                <span class="material-symbols-outlined text-sm">save</span> Add Teacher
            </button>
        </div>
    </form>
</div>

@section Scripts { @await Html.PartialAsync("_ValidationScriptsPartial") }
