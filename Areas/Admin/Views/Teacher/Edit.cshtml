@model TeacherViewModel
@{ ViewData["Title"] = "Edit Teacher"; ViewData["UserRole"] = "Admin"; }

<div class="mb-8">
    <nav class="flex mb-2 text-sm text-slate-500">
        <ol class="flex items-center space-x-2">
            <li><a asp-action="Index" class="hover:text-primary">Teachers</a></li>
            <li><span class="material-symbols-outlined text-sm">chevron_right</span></li>
            <li class="text-primary font-medium">Edit Teacher</li>
        </ol>
    </nav>
    <h2 class="text-3xl font-extrabold text-slate-900">Edit Teacher</h2>
</div>

<div class="max-w-3xl space-y-6">
    @* ── Edit form ── *@
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 md:p-8">
        <form asp-action="Edit" asp-area="Admin" asp-controller="Teacher" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm bg-red-50 p-3 rounded-lg mb-4"></div>

            <h3 class="text-sm font-bold text-primary mb-4 flex items-center gap-2">
                <span class="material-symbols-outlined !text-[18px]">badge</span> Personal Information
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div class="space-y-2">
                    <label asp-for="EmployeeId" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                    <input asp-for="EmployeeId" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
                    <span asp-validation-for="EmployeeId" class="text-red-500 text-xs"></span>
                </div>
                <div class="space-y-2">
                    <label asp-for="JoiningDate" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                    <input asp-for="JoiningDate" type="date" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
                </div>
                <div class="space-y-2">
                    <label asp-for="FirstName" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                    <input asp-for="FirstName" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
                    <span asp-validation-for="FirstName" class="text-red-500 text-xs"></span>
                </div>
                <div class="space-y-2">
                    <label asp-for="LastName" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                    <input asp-for="LastName" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
                    <span asp-validation-for="LastName" class="text-red-500 text-xs"></span>
                </div>
                <div class="space-y-2">
                    <label asp-for="Email" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                    <input asp-for="Email" type="email" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
                    <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
                </div>
                <div class="space-y-2">
                    <label asp-for="Phone" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                    <input asp-for="Phone" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
                </div>
                <div class="space-y-2">
                    <label asp-for="Specialization" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                    <input asp-for="Specialization" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
                </div>
                <div class="space-y-2">
                    <label asp-for="Qualification" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                    <input asp-for="Qualification" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
                </div>
            </div>

            <div class="flex items-center gap-4 mb-4">
                <label class="flex items-center gap-2 cursor-pointer">
                    <input asp-for="IsActive" type="checkbox" class="rounded border-slate-300 text-primary focus:ring-primary" />
                    <span class="text-sm font-medium text-slate-700">Active</span>
                </label>
            </div>

            <div class="flex items-center gap-3">
                <a asp-action="Index" class="px-6 py-2.5 rounded-lg text-slate-600 font-semibold text-sm hover:bg-slate-50 transition-colors">Cancel</a>
                <button type="submit" class="flex items-center gap-2 px-8 py-2.5 rounded-lg bg-primary text-white font-bold text-sm shadow-lg shadow-primary/30 hover:bg-primary/90 transition-all">
                    <span class="material-symbols-outlined text-sm">save</span> Save Changes
                </button>
            </div>
        </form>
    </div>

    @* ── Reset Password ── *@
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
        <h3 class="text-sm font-bold text-amber-700 mb-4 flex items-center gap-2">
            <span class="material-symbols-outlined !text-[18px]">lock_reset</span> Reset Login Password
            @if (!Model.HasLoginAccount)
            {
                <span class="ml-2 text-xs font-normal text-slate-400">(no login account yet — save account first)</span>
            }
        </h3>
        @if (Model.HasLoginAccount)
        {
            <form asp-action="ResetPassword" asp-area="Admin" asp-controller="Teacher" method="post" class="flex flex-wrap items-end gap-4">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="space-y-1">
                    <label class="text-xs font-semibold text-slate-500 uppercase tracking-wider">New Password</label>
                    <input name="newPassword" type="password" required
                           class="rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-2 px-3 min-w-[240px]"
                           placeholder="Min 6 chars, 1 uppercase, 1 digit, 1 special" autocomplete="new-password" />
                </div>
                <button type="submit"
                        onclick="return confirm('Reset password for this teacher?')"
                        class="bg-amber-500 hover:bg-amber-600 text-white px-5 py-2 rounded-lg text-sm font-bold transition-colors">
                    <span class="material-symbols-outlined !text-[16px] align-middle mr-1">key</span> Reset Password
                </button>
            </form>
        }
        else
        {
            <p class="text-sm text-slate-400">This teacher does not have a portal login account. Add the teacher with an email and password to create one.</p>
        }
    </div>
</div>

@section Scripts { @await Html.PartialAsync("_ValidationScriptsPartial") }
