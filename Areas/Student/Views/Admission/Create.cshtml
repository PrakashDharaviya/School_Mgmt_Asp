@model AdmissionViewModel
@{ ViewData["Title"] = "New Admission"; ViewData["UserRole"] = "Student Management"; }

<div class="mb-8">
    <nav class="flex mb-2 text-sm text-slate-500">
        <ol class="flex items-center space-x-2">
            <li><a asp-action="Index" class="hover:text-primary">Students</a></li>
            <li><span class="material-symbols-outlined text-sm">chevron_right</span></li>
            <li class="text-primary font-medium">New Admission</li>
        </ol>
    </nav>
    <h2 class="text-3xl font-extrabold text-slate-900">New Student Admission</h2>
</div>

<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 md:p-8 max-w-3xl">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm bg-red-50 p-3 rounded-lg mb-4"></div>

        <!-- Class & Enrollment Section -->
        <div class="mb-6 p-4 rounded-xl bg-blue-50/50 border border-blue-100">
            <h3 class="text-sm font-bold text-primary mb-3 flex items-center gap-2">
                <span class="material-symbols-outlined !text-[18px]">class</span> Class Assignment
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div class="space-y-2">
                <label asp-for="ClassSectionId" class="text-xs font-semibold text-slate-500 uppercase tracking-wider">Class &amp; Division</label>
                <select asp-for="ClassSectionId" id="classSectionSelect" class="w-full rounded-lg border-slate-200 bg-white focus:ring-primary focus:border-primary text-sm py-3">
                    <option value="0">-- Select Class --</option>
                    @foreach (var cs in Model.ClassSections)
                    {
                        <option value="@cs.Id" data-name="@cs.Name">@cs.Name</option>
                    }
                </select>
            </div>
            <div class="space-y-2">
                <label asp-for="AcademicYearId" class="text-xs font-semibold text-slate-500 uppercase tracking-wider">Academic Year</label>
                <select asp-for="AcademicYearId" class="w-full rounded-lg border-slate-200 bg-white focus:ring-primary focus:border-primary text-sm py-3">
                    <option value="0">-- Select Year --</option>
                    @foreach (var ay in Model.AcademicYears)
                    {
                        <option value="@ay.Id">@ay.Name</option>
                    }
                </select>
            </div>
            <!-- Course/Stream dropdown – only visible for Std 11 & 12 -->
            <div class="space-y-2 hidden" id="courseSection">
                <label asp-for="CourseId" class="text-xs font-semibold text-slate-500 uppercase tracking-wider">Stream / Course</label>
                <select asp-for="CourseId" class="w-full rounded-lg border-slate-200 bg-white focus:ring-primary focus:border-primary text-sm py-3">
                    <option value="">-- Select Stream --</option>
                    @foreach (var c in Model.Courses)
                    {
                        <option value="@c.Id">@c.Name</option>
                    }
                </select>
                <p class="text-xs text-slate-400"><span class="material-symbols-outlined !text-[13px] align-middle">info</span> Stream is required for Std 11 &amp; 12 only (e.g. Science, Commerce).</p>
            </div>
        </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div class="space-y-2">
                <label asp-for="AdmissionNumber" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="AdmissionNumber" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="e.g. ADM-2025-001" />
                <span asp-validation-for="AdmissionNumber" class="text-red-500 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label asp-for="AdmissionDate" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="AdmissionDate" type="date" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
            </div>
            <div class="space-y-2">
                <label asp-for="FirstName" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="FirstName" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="First Name" />
                <span asp-validation-for="FirstName" class="text-red-500 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label asp-for="LastName" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="LastName" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="Last Name" />
                <span asp-validation-for="LastName" class="text-red-500 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label asp-for="Email" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="Email" type="email" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="student@email.com" />
                <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label asp-for="Phone" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="Phone" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="+91 9876543210" />
            </div>
            <div class="space-y-2">
                <label asp-for="DateOfBirth" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="DateOfBirth" type="date"
                       max="@DateTime.Today.AddYears(-3).ToString("yyyy-MM-dd")"
                       min="@DateTime.Today.AddYears(-25).ToString("yyyy-MM-dd")"
                       value="@DateTime.Today.AddYears(-10).ToString("yyyy-MM-dd")"
                       class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
                <span asp-validation-for="DateOfBirth" class="text-red-500 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label asp-for="Gender" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <select asp-for="Gender" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3">
                    <option value="">Select</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="space-y-2">
                <label asp-for="GuardianName" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="GuardianName" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="Guardian Name" />
            </div>
            <div class="space-y-2">
                <label asp-for="GuardianPhone" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="GuardianPhone" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="+91 9876543210" />
            </div>
        </div>
        <div class="space-y-2 mb-6">
            <label asp-for="Address" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
            <textarea asp-for="Address" rows="3" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm" placeholder="Full Address"></textarea>
        </div>

        @* ── Login Credentials ── *@
        <div class="mb-6 p-4 rounded-xl bg-amber-50/60 border border-amber-100">
            <h3 class="text-sm font-bold text-amber-700 mb-3 flex items-center gap-2">
                <span class="material-symbols-outlined !text-[18px]">lock</span> Student Login Credentials
                <span class="text-xs font-normal text-slate-500 ml-1">(optional — set to allow student to log in to portal)</span>
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="space-y-2">
                    <label asp-for="Password" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                    <input asp-for="Password" type="password"
                           class="w-full rounded-lg border-slate-200 bg-white focus:ring-primary focus:border-primary text-sm py-3"
                           placeholder="Min 6 chars, 1 uppercase, 1 digit, 1 special" autocomplete="new-password" />
                    <span asp-validation-for="Password" class="text-red-500 text-xs"></span>
                </div>
                <div class="space-y-2">
                    <label asp-for="ConfirmPassword" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                    <input asp-for="ConfirmPassword" type="password"
                           class="w-full rounded-lg border-slate-200 bg-white focus:ring-primary focus:border-primary text-sm py-3"
                           placeholder="Repeat password" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs"></span>
                </div>
            </div>
            <p class="text-xs text-slate-400 mt-2">
                <span class="material-symbols-outlined !text-[13px] align-middle">info</span>
                Login uses the student's email above as username. Leave blank if you don't want to create a portal account now.
            </p>
        </div>

        <div class="flex items-center gap-3">
            <a asp-action="Index" class="px-6 py-2.5 rounded-lg text-slate-600 font-semibold text-sm hover:bg-slate-50 transition-colors">Cancel</a>
            <button type="submit" class="flex items-center gap-2 px-8 py-2.5 rounded-lg bg-primary text-white font-bold text-sm shadow-lg shadow-primary/30 hover:bg-primary/90 transition-all">
                <span class="material-symbols-outlined text-sm">save</span> Submit Admission
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        // Show/hide Course (Stream) dropdown based on selected standard
        document.addEventListener('DOMContentLoaded', function () {
            const classSelect = document.getElementById('classSectionSelect');
            const courseSection = document.getElementById('courseSection');
            const courseSelect = document.getElementById('CourseId');

            function toggleCourse() {
                const selected = classSelect.options[classSelect.selectedIndex];
                const name = selected ? selected.getAttribute('data-name') || '' : '';
                // Extract standard number from "Std 11 - A" or "Std 12 - B"
                const match = name.match(/Std\s+(\d+)/i);
                const std = match ? parseInt(match[1]) : 0;
                if (std === 11 || std === 12) {
                    courseSection.classList.remove('hidden');
                } else {
                    courseSection.classList.add('hidden');
                    if (courseSelect) courseSelect.value = '';
                }
            }

            classSelect.addEventListener('change', toggleCourse);
            toggleCourse(); // run on page load
        });
    </script>
}
