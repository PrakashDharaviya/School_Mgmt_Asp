@model AdmissionViewModel
@{ ViewData["Title"] = "Edit Student"; ViewData["UserRole"] = "Student Management"; }

<div class="mb-8">
    <nav class="flex mb-2 text-sm text-slate-500">
        <ol class="flex items-center space-x-2">
            <li><a asp-action="Index" class="hover:text-primary">Students</a></li>
            <li><span class="material-symbols-outlined text-sm">chevron_right</span></li>
            <li class="text-primary font-medium">Edit Student</li>
        </ol>
    </nav>
    <h2 class="text-3xl font-extrabold text-slate-900">Edit Student — @Model.FirstName @Model.LastName</h2>
</div>

<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 md:p-8 max-w-3xl">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="AdmissionNumber" />
        <input type="hidden" asp-for="AdmissionDate" />
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm bg-red-50 p-3 rounded-lg mb-4"></div>

        <!-- Class & Enrollment Section -->
        <div class="mb-6 p-4 rounded-xl bg-blue-50/50 border border-blue-100">
            <h3 class="text-sm font-bold text-primary mb-3 flex items-center gap-2">
                <span class="material-symbols-outlined !text-[18px]">class</span> Class Assignment
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="space-y-2">
                    <label asp-for="ClassSectionId" class="text-xs font-semibold text-slate-500 uppercase tracking-wider">Class &amp; Division</label>
                    <select asp-for="ClassSectionId" class="w-full rounded-lg border-slate-200 bg-white focus:ring-primary focus:border-primary text-sm py-3">
                        <option value="0">-- Select Class --</option>
                        @foreach (var cs in Model.ClassSections)
                        {
                            <option value="@cs.Id">@cs.Name</option>
                        }
                    </select>
                </div>
                <div class="space-y-2">
                    <label asp-for="AcademicYearId" class="text-xs font-semibold text-slate-500 uppercase tracking-wider">Academic Year</label>
                    <select asp-for="AcademicYearId" class="w-full rounded-lg border-slate-200 bg-white focus:ring-primary focus:border-primary text-sm py-3">
                        <option value="0">-- Select Year --</option>
                        @foreach (var ay in Model.AcademicYears)
                        {
                            <option value="@ay.Id">@ay.Name</option>
                        }
                    </select>
                </div>
                <div class="space-y-2">
                    <label asp-for="RollNumber" class="text-xs font-semibold text-slate-500 uppercase tracking-wider">Roll Number</label>
                    <input asp-for="RollNumber" type="number" class="w-full rounded-lg border-slate-200 bg-white focus:ring-primary focus:border-primary text-sm py-3" />
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div class="space-y-2">
                <label class="text-xs font-semibold text-slate-500 uppercase tracking-wider">Admission Number</label>
                <input value="@Model.AdmissionNumber" disabled class="w-full rounded-lg border-slate-200 bg-slate-100 text-sm py-3 text-slate-500" />
            </div>
            <div class="space-y-2">
                <label class="text-xs font-semibold text-slate-500 uppercase tracking-wider">Admission Date</label>
                <input value="@Model.AdmissionDate.ToString("dd-MMM-yyyy")" disabled class="w-full rounded-lg border-slate-200 bg-slate-100 text-sm py-3 text-slate-500" />
            </div>
            <div class="space-y-2">
                <label asp-for="FirstName" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="FirstName" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
                <span asp-validation-for="FirstName" class="text-red-500 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label asp-for="LastName" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="LastName" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
                <span asp-validation-for="LastName" class="text-red-500 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label asp-for="Email" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="Email" type="email" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
            </div>
            <div class="space-y-2">
                <label asp-for="Phone" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="Phone" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
            </div>
            <div class="space-y-2">
                <label asp-for="DateOfBirth" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="DateOfBirth" type="date" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
            </div>
            <div class="space-y-2">
                <label asp-for="Gender" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <select asp-for="Gender" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3">
                    <option value="">Select</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="space-y-2">
                <label asp-for="GuardianName" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="GuardianName" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
            </div>
            <div class="space-y-2">
                <label asp-for="GuardianPhone" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="GuardianPhone" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
            </div>
        </div>
        <div class="space-y-2 mb-6">
            <label asp-for="Address" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
            <textarea asp-for="Address" rows="3" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm"></textarea>
        </div>

        <div class="flex items-center gap-3">
            <a asp-action="Index" class="px-6 py-2.5 rounded-lg text-slate-600 font-semibold text-sm hover:bg-slate-50 transition-colors">Cancel</a>
            <button type="submit" class="flex items-center gap-2 px-8 py-2.5 rounded-lg bg-primary text-white font-bold text-sm shadow-lg shadow-primary/30 hover:bg-primary/90 transition-all">
                <span class="material-symbols-outlined text-sm">save</span> Save Changes
            </button>
        </div>
    </form>
</div>
