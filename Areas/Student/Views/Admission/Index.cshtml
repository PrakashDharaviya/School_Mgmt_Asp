@model SchoolEduERP.Helpers.PaginatedList<AdmissionViewModel>
@using Microsoft.AspNetCore.Routing
@{
    ViewData["Title"] = "Students";
    ViewData["UserRole"] = "Student Management";
    var standards       = ViewBag.Standards as List<string> ?? new List<string>();
    var sections        = ViewBag.Sections  as List<string> ?? new List<string>();
    var selectedStandard = ViewBag.SelectedStandard as int?;
    var selectedSection  = ViewBag.SelectedSection  as string;
    var searchTerm       = ViewBag.SearchTerm as string ?? "";
    ViewData["RouteValues"] = new RouteValueDictionary(new { standard = selectedStandard, section = selectedSection, search = searchTerm });
}

<div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
    <div>
        <h1 class="text-2xl md:text-3xl font-bold text-slate-900 dark:text-white tracking-tight">Students</h1>
        <p class="text-slate-500 dark:text-slate-400 mt-1">View students class-wise (Standard &amp; Division)</p>
    </div>
    <a asp-action="Create" class="bg-primary hover:bg-primary/90 text-white font-semibold py-2.5 px-6 rounded-xl transition-all shadow-lg shadow-primary/20 flex items-center gap-2 w-fit">
        <span class="material-symbols-outlined text-[20px]">person_add</span> New Admission
    </a>
</div>

<!-- Filter Bar -->
<div class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4 mb-6">
    <form method="get" class="flex flex-wrap items-end gap-4">
        <div>
            <label class="block text-xs font-semibold text-slate-500 dark:text-slate-400 mb-1">Standard</label>
            <select name="standard" class="rounded-lg border-slate-200 bg-slate-50 text-sm py-2 px-3 focus:ring-primary focus:border-primary min-w-[120px]">
                <option value="">All Standards</option>
                @foreach (var std in standards)
                {
                    <option value="@std" selected="@(selectedStandard?.ToString() == std)">Std @std</option>
                }
            </select>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-500 dark:text-slate-400 mb-1">Division</label>
            <select name="section" class="rounded-lg border-slate-200 bg-slate-50 text-sm py-2 px-3 focus:ring-primary focus:border-primary min-w-[100px]">
                <option value="">All Divisions</option>
                @foreach (var sec in sections)
                {
                    <option value="@sec" selected="@(selectedSection == sec)">@sec</option>
                }
            </select>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-500 dark:text-slate-400 mb-1">Search</label>
            <input name="search" value="@searchTerm" placeholder="Name, Adm. No or Emailâ€¦"
                   class="rounded-lg border-slate-200 bg-slate-50 text-sm py-2 px-3 focus:ring-primary focus:border-primary min-w-[200px]" />
        </div>
        <button type="submit" class="bg-primary text-white px-4 py-2 rounded-lg text-sm font-bold hover:bg-primary/90 transition-all">
            <span class="material-symbols-outlined !text-[16px] align-middle mr-1">filter_alt</span> Filter
        </button>
        <a asp-action="Index" class="text-sm text-slate-500 dark:text-slate-400 hover:text-primary font-medium px-3 py-2">Clear</a>
    </form>
</div>

<div class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
    <div class="px-6 py-3 border-b border-slate-100 dark:border-slate-700 flex items-center justify-between">
        <span class="text-sm text-slate-500 dark:text-slate-400">
            Showing <strong>@(((Model.PageIndex - 1) * Model.PageSize) + 1)</strong>&ndash;<strong>@Math.Min(Model.PageIndex * Model.PageSize, Model.TotalCount)</strong> of <strong>@Model.TotalCount</strong> students
        </span>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full text-left">
            <thead>
                <tr class="bg-slate-50 dark:bg-surface-dark-hover text-slate-500 dark:text-slate-400 text-xs font-bold uppercase tracking-wider">
                    <th class="px-6 py-3">Roll</th>
                    <th class="px-6 py-3">Adm. No</th>
                    <th class="px-6 py-3">Class</th>
                    <th class="px-6 py-3">Name</th>
                    <th class="px-6 py-3">Email</th>
                    <th class="px-6 py-3">Gender</th>
                    <th class="px-6 py-3">DOB</th>
                    <th class="px-6 py-3 text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100 dark:divide-slate-700">
                @foreach (var s in Model)
                {
                    <tr class="hover:bg-slate-50/50 dark:hover:bg-surface-dark-hover/50 transition-colors">
                        <td class="px-6 py-4 font-mono text-sm text-slate-500 dark:text-slate-400">@(s.RollNumber > 0 ? s.RollNumber.ToString("D3") : "-")</td>
                        <td class="px-6 py-4 font-mono text-sm text-slate-500 dark:text-slate-400">@s.AdmissionNumber</td>
                        <td class="px-6 py-4">
                            @if (!string.IsNullOrEmpty(s.ClassName))
                            {
                                <span class="bg-primary/10 text-primary text-xs font-bold px-2 py-1 rounded">@s.ClassName</span>
                            }
                            else
                            {
                                <span class="text-slate-400 text-xs">Not Enrolled</span>
                            }
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                <div class="h-9 w-9 rounded-full bg-primary/10 text-primary flex items-center justify-center font-bold text-xs flex-shrink-0">
                                    @s.FirstName[0]@s.LastName[0]
                                </div>
                                <span class="font-semibold">@s.FirstName @s.LastName</span>
                            </div>
                        </td>
                        <td class="px-6 py-4 text-sm text-slate-500 dark:text-slate-400">@(s.Email ?? "N/A")</td>
                        <td class="px-6 py-4 text-sm">@(s.Gender ?? "N/A")</td>
                        <td class="px-6 py-4 text-sm text-slate-500 dark:text-slate-400">@s.DateOfBirth.ToString("dd-MMM-yyyy")</td>
                        <td class="px-6 py-4 text-right">
                            <div class="flex items-center justify-end gap-2">
                                <a asp-action="Edit" asp-route-id="@s.Id"
                                   class="inline-flex items-center gap-1 text-xs font-semibold text-primary hover:text-primary/80 bg-primary/5 px-3 py-1.5 rounded-lg transition-colors">
                                    <span class="material-symbols-outlined !text-[16px]">edit</span> Edit
                                </a>
                                <a asp-area="Student" asp-controller="Profile" asp-action="Index" asp-route-id="@s.Id"
                                   class="inline-flex items-center gap-1 text-xs font-semibold text-emerald-700 hover:text-emerald-600 bg-emerald-50 px-3 py-1.5 rounded-lg transition-colors">
                                    <span class="material-symbols-outlined !text-[16px]">person</span> Profile
                                </a>
                                <form asp-action="Delete" method="post" class="inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@s.Id" />
                                    <button type="submit" onclick="return confirm('Remove this student?')"
                                            class="inline-flex items-center gap-1 text-xs font-semibold text-red-600 hover:text-red-500 bg-red-50 px-3 py-1.5 rounded-lg transition-colors">
                                        <span class="material-symbols-outlined !text-[16px]">delete</span> Remove
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="8" class="px-6 py-12 text-center">
                            <span class="material-symbols-outlined text-5xl text-slate-300 dark:text-slate-600 block mb-2">group_off</span>
                            <span class="text-slate-400 dark:text-slate-500">No students match your filters.</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @await Html.PartialAsync("_Pagination", Model)
</div>
