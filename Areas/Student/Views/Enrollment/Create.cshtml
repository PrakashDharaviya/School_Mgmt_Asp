@model EnrollmentViewModel
@{ ViewData["Title"] = "New Enrollment"; ViewData["UserRole"] = "Student Management"; }

<div class="mb-8">
    <h2 class="text-3xl font-extrabold text-slate-900">Enroll Student</h2>
    <p class="text-slate-500 mt-1">Assign a student to a class, section, and academic year.</p>
</div>

<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 md:p-8 max-w-2xl">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm bg-red-50 p-3 rounded-lg mb-4"></div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div class="space-y-2">
                <label asp-for="StudentId" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <select asp-for="StudentId" asp-items="@(new SelectList(Model.Students, "Id", "Name"))" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3">
                    <option value="">Select Student</option>
                </select>
            </div>
            <div class="space-y-2">
                <label asp-for="ClassSectionId" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <select asp-for="ClassSectionId" asp-items="@(new SelectList(Model.ClassSections, "Id", "Name"))" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3">
                    <option value="">Select Class</option>
                </select>
            </div>
            <div class="space-y-2">
                <label asp-for="AcademicYearId" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <select asp-for="AcademicYearId" asp-items="@(new SelectList(Model.AcademicYears, "Id", "Name"))" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3">
                    <option value="">Select Year</option>
                </select>
            </div>
            <div class="space-y-2">
                <label asp-for="RollNumber" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="RollNumber" type="number" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="1" />
            </div>
        </div>

        <div class="flex items-center gap-3">
            <a asp-action="Index" class="px-6 py-2.5 rounded-lg text-slate-600 font-semibold text-sm hover:bg-slate-50">Cancel</a>
            <button type="submit" class="flex items-center gap-2 px-8 py-2.5 rounded-lg bg-primary text-white font-bold text-sm shadow-lg shadow-primary/30 hover:bg-primary/90 transition-all">
                <span class="material-symbols-outlined text-sm">save</span> Enroll Student
            </button>
        </div>
    </form>
</div>
