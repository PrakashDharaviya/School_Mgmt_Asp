@model FeeViewModel
@{ ViewData["Title"] = "Fee Payment"; ViewData["UserRole"] = User.IsInRole("Admin") ? "Admin" : User.IsInRole("Teacher") ? "Teacher" : "Student"; }

<div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
    <div>
<h1 class="text-2xl md:text-3xl font-bold text-slate-900 dark:text-white tracking-tight">Fee Payment Portal</h1>
        <p class="text-slate-500 dark:text-slate-400 mt-1">@Model.StudentName â€” Fee schedule and payments</p>
    </div>
    @if (ViewBag.CanBrowse == true)
    {
        <form method="get" class="flex items-center gap-2">
            <select name="studentId" onchange="this.form.submit()" class="rounded-lg border-slate-200 bg-white text-sm py-2.5 px-4 focus:ring-primary focus:border-primary shadow-sm">
                @foreach (var s in (IEnumerable<dynamic>)ViewBag.Students)
                {
                    <option value="@s.Id" selected="@(s.Id == Model.StudentId)">@s.Name</option>
                }
            </select>
        </form>
    }
</div>

<!-- Summary Cards -->
<div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-8">
    <div class="bg-white dark:bg-surface-dark rounded-xl p-6 shadow-sm border border-slate-100 dark:border-slate-700">
        <p class="text-slate-500 dark:text-slate-400 text-sm font-medium mb-1">Total Due</p>
        <h3 class="text-2xl font-bold text-slate-900 dark:text-white">&#x20B9;@Model.TotalDue.ToString("N0")</h3>
    </div>
    <div class="bg-white dark:bg-surface-dark rounded-xl p-6 shadow-sm border border-slate-100 dark:border-slate-700">
        <p class="text-slate-500 dark:text-slate-400 text-sm font-medium mb-1">Total Paid</p>
        <h3 class="text-2xl font-bold text-emerald-600">&#x20B9;@Model.TotalPaid.ToString("N0")</h3>
    </div>
    <div class="bg-white dark:bg-surface-dark rounded-xl p-6 shadow-sm border border-slate-100 dark:border-slate-700">
        <p class="text-slate-500 dark:text-slate-400 text-sm font-medium mb-1">Balance</p>
        <h3 class="text-2xl font-bold @(Model.Balance > 0 ? "text-red-600" : "text-emerald-600")">&#x20B9;@Model.Balance.ToString("N0")</h3>
    </div>
</div>

<!-- Fee Schedule -->
<div class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden mb-8">
    <div class="px-6 py-4 border-b border-slate-100 dark:border-slate-700">
        <h3 class="font-bold text-lg dark:text-white">Fee Schedule</h3>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full text-left">
            <thead>
                <tr class="bg-slate-50 dark:bg-surface-dark-hover text-slate-500 dark:text-slate-400 text-xs font-bold uppercase tracking-wider">
                    <th class="px-6 py-3">Fee Head</th>
                    <th class="px-6 py-3">Amount</th>
                    <th class="px-6 py-3">Due Date</th>
                    <th class="px-6 py-3">Paid</th>
                    <th class="px-6 py-3">Status</th>
                    <th class="px-6 py-3">Action</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100 dark:divide-slate-700">
                @foreach (var fee in Model.FeeSchedule)
                {
                    <tr class="hover:bg-slate-50/50 dark:hover:bg-surface-dark-hover/50 transition-colors">
                        <td class="px-6 py-4 font-semibold dark:text-white">@fee.FeeName</td>
                        <td class="px-6 py-4 dark:text-white">&#x20B9;@fee.Amount.ToString("N0")</td>
                        <td class="px-6 py-4 text-sm text-slate-500 dark:text-slate-400">@fee.DueDate.ToString("dd-MMM-yyyy")</td>
                        <td class="px-6 py-4 text-sm dark:text-white">&#x20B9;@fee.AmountPaid.ToString("N0")</td>
                        <td class="px-6 py-4">
                            @if (fee.Status == "Paid")
                            {
                                <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full bg-emerald-100 text-emerald-700 text-xs font-bold">
                                    <span class="material-symbols-outlined text-[14px]">check_circle</span> Paid
                                </span>
                            }
                            else if (fee.Status == "Overdue")
                            {
                                <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full bg-red-100 text-red-700 text-xs font-bold">
                                    <span class="material-symbols-outlined text-[14px]">warning</span> Overdue
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full bg-amber-100 text-amber-700 text-xs font-bold">
                                    <span class="material-symbols-outlined text-[14px]">pending</span> Pending
                                </span>
                            }
                        </td>
                        <td class="px-6 py-4">
                            @if (fee.Status != "Paid")
                            {
                                <a asp-action="Pay" asp-route-studentId="@Model.StudentId" asp-route-feeHeadId="@fee.FeeHeadId"
                                   class="bg-primary text-white px-4 py-1.5 rounded-lg text-xs font-bold hover:bg-primary/90 transition-all">Pay Now</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (Model.RecentPayments.Any())
{
    <div class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-100 dark:border-slate-700"><h3 class="font-bold text-lg dark:text-white">Recent Payments</h3></div>
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead><tr class="bg-slate-50 dark:bg-surface-dark-hover text-slate-500 dark:text-slate-400 text-xs font-bold uppercase tracking-wider">
                    <th class="px-6 py-3">Fee</th><th class="px-6 py-3">Amount</th><th class="px-6 py-3">Date</th><th class="px-6 py-3">Method</th><th class="px-6 py-3">Status</th><th class="px-6 py-3 text-right">Receipt</th>
                </tr></thead>
                <tbody class="divide-y divide-slate-100 dark:divide-slate-700">
                    @foreach (var p in Model.RecentPayments)
                    {
                        <tr class="hover:bg-slate-50/50 dark:hover:bg-surface-dark-hover/50">
                            <td class="px-6 py-4 dark:text-white">@p.FeeName</td>
                            <td class="px-6 py-4 dark:text-white">&#x20B9;@p.Amount.ToString("N0")</td>
                            <td class="px-6 py-4 text-sm text-slate-500 dark:text-slate-400">@p.PaymentDate.ToString("dd-MMM-yyyy")</td>
                            <td class="px-6 py-4 text-sm dark:text-white">@p.PaymentMethod</td>
                            <td class="px-6 py-4"><span class="px-2 py-1 rounded-full bg-emerald-100 text-emerald-700 text-xs font-bold">@p.Status</span></td>
                            <td class="px-6 py-4 text-right">
                                <a asp-area="" asp-controller="ReportDownload" asp-action="FeeReceipt" asp-route-paymentId="@p.Id"
                                   class="inline-flex items-center gap-1 text-xs font-semibold text-primary hover:text-primary/80 bg-primary/5 px-3 py-1.5 rounded-lg transition-colors">
                                    <span class="material-symbols-outlined !text-[16px]">picture_as_pdf</span> Receipt
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
