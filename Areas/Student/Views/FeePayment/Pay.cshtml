@model FeePaymentFormViewModel
@{ ViewData["Title"] = "Make Payment"; ViewData["UserRole"] = User.IsInRole("Admin") ? "Admin" : User.IsInRole("Teacher") ? "Teacher" : "Student"; }

<div class="mb-8">
    <h2 class="text-3xl font-extrabold text-slate-900">Make Payment</h2>
    <p class="text-slate-500 mt-1">@ViewBag.FeeName &mdash; &#x20B9;@ViewBag.FeeAmount</p>
</div>

<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 md:p-8 max-w-lg">
    <form asp-action="Pay" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="StudentId" />
        <input type="hidden" asp-for="FeeHeadId" />
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm bg-red-50 p-3 rounded-lg mb-4"></div>
        <div class="space-y-6">
            <div class="space-y-2">
                <label asp-for="AmountPaid" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="AmountPaid" type="number" step="0.01" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
                <span asp-validation-for="AmountPaid" class="text-red-500 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label asp-for="PaymentMethod" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <select asp-for="PaymentMethod" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3">
                    <option value="Cash">Cash</option>
                    <option value="Online">Online</option>
                    <option value="Cheque">Cheque</option>
                    <option value="UPI">UPI</option>
                </select>
            </div>
            <div class="space-y-2">
                <label asp-for="TransactionId" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="TransactionId" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="Optional" />
            </div>
        </div>
        <div class="flex items-center gap-3 mt-6">
            <a asp-action="Index" asp-route-studentId="@Model.StudentId" class="px-6 py-2.5 rounded-lg text-slate-600 font-semibold text-sm hover:bg-slate-50">Cancel</a>
            <button type="submit" class="flex items-center gap-2 px-8 py-2.5 rounded-lg bg-primary text-white font-bold text-sm shadow-lg shadow-primary/30 hover:bg-primary/90 transition-all">
                <span class="material-symbols-outlined text-sm">payments</span> Submit Payment
            </button>
        </div>
    </form>
</div>
