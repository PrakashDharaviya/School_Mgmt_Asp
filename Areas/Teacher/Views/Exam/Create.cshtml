@model ExamViewModel
@{ ViewData["Title"] = "Create Exam"; ViewData["UserRole"] = "Teacher"; }

<div class="mb-8">
    <h2 class="text-3xl font-extrabold text-slate-900">Create New Exam</h2>
    <p class="text-slate-500 mt-1">Define exam details and schedule.</p>
</div>

<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 md:p-8 max-w-2xl">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm bg-red-50 p-3 rounded-lg mb-4"></div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div class="space-y-2">
                <label asp-for="Name" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="Name" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="e.g. Unit Test 1" />
                <span asp-validation-for="Name" class="text-red-500 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label asp-for="CourseId" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <select asp-for="CourseId" asp-items="@(new SelectList(Model.Courses, "Id", "Name"))" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3">
                    <option value="">Select Course</option>
                </select>
                <span asp-validation-for="CourseId" class="text-red-500 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label asp-for="ExamDate" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="ExamDate" type="date" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
            </div>
            <div class="space-y-2">
                <label asp-for="TotalMarks" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="TotalMarks" type="number" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" />
            </div>
            <div class="space-y-2">
                <label asp-for="Room" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="Room" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="e.g. Room 101" />
            </div>
            <div class="space-y-2">
                <label asp-for="Invigilator" class="text-xs font-semibold text-slate-500 uppercase tracking-wider"></label>
                <input asp-for="Invigilator" class="w-full rounded-lg border-slate-200 bg-slate-50 focus:ring-primary focus:border-primary text-sm py-3" placeholder="Invigilator Name" />
            </div>
        </div>

        <div class="flex items-center gap-3">
            <a asp-action="Index" class="px-6 py-2.5 rounded-lg text-slate-600 font-semibold text-sm hover:bg-slate-50">Cancel</a>
            <button type="submit" class="flex items-center gap-2 px-8 py-2.5 rounded-lg bg-primary text-white font-bold text-sm shadow-lg shadow-primary/30 hover:bg-primary/90 transition-all">
                <span class="material-symbols-outlined text-sm">save</span> Create Exam
            </button>
        </div>
    </form>
</div>
