@model List<ExamViewModel>
@{ ViewData["Title"] = "Exam Management"; ViewData["UserRole"] = "Teacher"; }

<div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
    <div>
        <h1 class="text-2xl md:text-3xl font-bold text-slate-900 dark:text-white tracking-tight">Exam Management</h1>
        <p class="text-slate-500 dark:text-slate-400 mt-1">Create and manage exam schedules.</p>
    </div>
    <a asp-action="Create" class="bg-primary hover:bg-primary/90 text-white font-semibold py-2.5 px-6 rounded-xl transition-all shadow-lg shadow-primary/20 flex items-center gap-2 w-fit">
        <span class="material-symbols-outlined text-[20px]">add</span> New Exam
    </a>
</div>

<div class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full text-left">
            <thead>
                <tr class="bg-slate-50 dark:bg-surface-dark-hover text-slate-500 dark:text-slate-400 text-xs font-bold uppercase tracking-wider">
                    <th class="px-6 py-3">Exam Name</th>
                    <th class="px-6 py-3">Course</th>
                    <th class="px-6 py-3">Date</th>
                    <th class="px-6 py-3">Total Marks</th>
                    <th class="px-6 py-3">Room</th>
                    <th class="px-6 py-3">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100 dark:divide-slate-700">
                @if (Model.Any())
                {
                    @foreach (var e in Model)
                    {
                        <tr class="hover:bg-slate-50/50 dark:hover:bg-surface-dark-hover/50 transition-colors">
                            <td class="px-6 py-4 font-semibold dark:text-white">@e.Name</td>
                            <td class="px-6 py-4"><span class="bg-primary/10 text-primary text-xs font-bold px-2 py-1 rounded">@e.CourseName</span></td>
                            <td class="px-6 py-4 text-sm text-slate-500 dark:text-slate-400">@e.ExamDate.ToString("dd-MMM-yyyy")</td>
                            <td class="px-6 py-4 text-sm font-bold dark:text-white">@e.TotalMarks</td>
                            <td class="px-6 py-4 text-sm text-slate-500 dark:text-slate-400">@(e.Room ?? "TBD")</td>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-2">
                                    <a asp-action="Edit" asp-route-id="@e.Id"
                                       class="flex items-center gap-1 text-xs font-semibold text-primary hover:text-primary/80 bg-primary/10 hover:bg-primary/20 px-3 py-1.5 rounded-lg transition-colors">
                                        <span class="material-symbols-outlined text-[16px]">edit</span> Edit
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@e.Id" method="post" class="inline"
                                          onsubmit="return confirm('Delete exam &quot;@e.Name&quot;? This will also remove all related marks.');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="flex items-center gap-1 text-xs font-semibold text-red-600 hover:text-red-800 bg-red-50 hover:bg-red-100 px-3 py-1.5 rounded-lg transition-colors">
                                            <span class="material-symbols-outlined text-[16px]">delete</span> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="6" class="px-6 py-12 text-center text-slate-400 dark:text-slate-500">No exams created yet.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>
