@model MarksViewModel
@{ ViewData["Title"] = "Marks Entry"; ViewData["UserRole"] = "Teacher"; }

<nav class="flex items-center gap-2 text-sm text-slate-500 mb-6">
    <a asp-controller="Dashboard" asp-action="Index" asp-area="" class="hover:text-primary flex items-center gap-1"><span class="material-symbols-outlined text-base">home</span>Home</a>
    <span class="material-symbols-outlined text-xs">chevron_right</span>
    <span class="text-slate-900 font-medium">Marks Entry</span>
</nav>

<!-- Selection -->
<section class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6 mb-8">
    <form method="get" class="grid grid-cols-1 md:grid-cols-3 gap-6 items-end">
        <div class="space-y-2">
            <label class="text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wider">Exam</label>
            <select name="examId" onchange="this.form.submit()" class="w-full rounded-lg border-slate-200 dark:border-slate-600 bg-slate-50 dark:bg-surface-dark-hover dark:text-white focus:ring-primary focus:border-primary text-sm">
                @foreach (var e in Model.Exams) { <option value="@e.Id" selected="@(e.Id == Model.ExamId)">@e.Name</option> }
            </select>
        </div>
        <div class="space-y-2">
            <label class="text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wider">Course</label>
            <select name="courseId" onchange="this.form.submit()" class="w-full rounded-lg border-slate-200 dark:border-slate-600 bg-slate-50 dark:bg-surface-dark-hover dark:text-white focus:ring-primary focus:border-primary text-sm">
                @foreach (var c in Model.Courses) { <option value="@c.Id" selected="@(c.Id == Model.CourseId)">@c.Name</option> }
            </select>
        </div>
        <div class="flex items-center gap-3 bg-primary/5 p-3 rounded-lg border border-primary/10">
            <span class="material-symbols-outlined text-primary">calculate</span>
            <div class="flex flex-col">
                <span class="text-sm font-bold text-primary">Auto GPA</span>
                <span class="text-[10px] text-primary/70 leading-none">Real-time calculations</span>
            </div>
        </div>
    </form>
</section>

<div class="flex flex-col lg:flex-row gap-8 items-start mb-24">
    <form asp-action="Save" method="post" class="flex-1 w-full">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ExamId" />
        <input type="hidden" asp-for="CourseId" />

        <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
            <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700 flex items-center justify-between">
                <h3 class="font-bold text-slate-800 dark:text-white">Marks Entry Table</h3>
                <div class="flex items-center gap-2 text-xs font-medium text-slate-500">
                    <span class="w-2 h-2 rounded-full bg-green-500"></span> @Model.Students.Count Students
                </div>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-left">
                    <thead>
                        <tr class="bg-slate-50 dark:bg-surface-dark-hover text-slate-500 dark:text-slate-400 text-xs font-bold uppercase tracking-wider">
                            <th class="px-6 py-4">Roll No</th>
                            <th class="px-6 py-4">Student Name</th>
                            <th class="px-6 py-4">Marks (Out of @Model.TotalMarks)</th>
                            <th class="px-6 py-4">GPA</th>
                            <th class="px-6 py-4">Status</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100 dark:divide-slate-700">
                        @for (int i = 0; i < Model.Students.Count; i++)
                        {
                            <tr class="hover:bg-slate-50/50 dark:hover:bg-surface-dark-hover/50 transition-colors">
                                <td class="px-6 py-4 text-sm font-medium text-slate-600 dark:text-slate-400">
                                    @Model.Students[i].RollNumber.ToString("D3")
                                    <input type="hidden" name="Students[@i].StudentId" value="@Model.Students[i].StudentId" />
                                    <input type="hidden" name="Students[@i].RollNumber" value="@Model.Students[i].RollNumber" />
                                    <input type="hidden" name="Students[@i].StudentName" value="@Model.Students[i].StudentName" />
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-3">
                                        <div class="w-8 h-8 rounded-full bg-primary/10 text-primary flex items-center justify-center text-xs font-bold">@Model.Students[i].StudentName[0]</div>
                                        <span class="text-sm font-semibold text-slate-800 dark:text-white">@Model.Students[i].StudentName</span>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <input name="Students[@i].MarksObtained" type="number" min="0" max="@Model.TotalMarks" step="0.01" value="@Model.Students[i].MarksObtained" class="w-20 px-3 py-1.5 rounded-lg border-slate-200 dark:border-slate-600 bg-white dark:bg-surface-dark-hover dark:text-white text-sm font-bold focus:ring-primary focus:border-primary" />
                                </td>
                                <td class="px-6 py-4">
                                    <span class="px-2.5 py-1 rounded-md bg-primary/10 text-primary font-bold text-sm">@Model.Students[i].GradePoint</span>
                                </td>
                                <td class="px-6 py-4">
                                    @if (Model.Students[i].Status == "Saved")
                                    {
                                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full bg-green-100 text-green-700 text-xs font-bold">
                                            <span class="material-symbols-outlined text-[14px]">check_circle</span> Saved
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full bg-amber-100 text-amber-700 text-xs font-bold">
                                            <span class="material-symbols-outlined text-[14px]">pending</span> Pending
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (!Model.Students.Any())
            {
                <div class="p-12 text-center text-slate-400">No students found. Ensure students are enrolled for the active academic year.</div>
            }
        </div>

        @if (Model.Students.Any())
        {
            <div class="mt-6 flex items-center justify-end gap-3">
                <button type="submit" class="flex items-center gap-2 px-8 py-2.5 rounded-lg bg-primary text-white font-bold text-sm shadow-lg shadow-primary/20 hover:bg-primary/90 transition-all">
                    <span class="material-symbols-outlined text-lg">save</span> Save All Marks
                </button>
            </div>
        }
    </form>

    <!-- Sidebar -->
    <aside class="w-full lg:w-80 shrink-0 space-y-6">
        <div class="bg-white dark:bg-surface-dark rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
            <div class="px-5 py-4 bg-primary text-white flex items-center gap-2">
                <span class="material-symbols-outlined text-lg">info</span>
                <h4 class="font-bold text-sm uppercase tracking-wide">Grade Boundaries</h4>
            </div>
            <div class="p-5">
                <ul class="space-y-4">
                    <li class="flex items-center justify-between"><div class="flex flex-col"><span class="text-sm font-bold text-slate-800 dark:text-white">Grade A+</span><span class="text-xs text-slate-500">90 - 100</span></div><span class="bg-slate-100 px-3 py-1 rounded-lg text-sm font-bold text-primary">4.0</span></li>
                    <li class="flex items-center justify-between"><div class="flex flex-col"><span class="text-sm font-bold text-slate-800 dark:text-white">Grade A</span><span class="text-xs text-slate-500">80 - 89</span></div><span class="bg-slate-100 px-3 py-1 rounded-lg text-sm font-bold text-primary">3.7</span></li>
                    <li class="flex items-center justify-between"><div class="flex flex-col"><span class="text-sm font-bold text-slate-800 dark:text-white">Grade B+</span><span class="text-xs text-slate-500">70 - 79</span></div><span class="bg-slate-100 px-3 py-1 rounded-lg text-sm font-bold text-primary">3.3</span></li>
                    <li class="flex items-center justify-between"><div class="flex flex-col"><span class="text-sm font-bold text-slate-800 dark:text-white">Grade B</span><span class="text-xs text-slate-500">60 - 69</span></div><span class="bg-slate-100 px-3 py-1 rounded-lg text-sm font-bold text-primary">3.0</span></li>
                    <li class="flex items-center justify-between"><div class="flex flex-col"><span class="text-sm font-bold text-slate-800 dark:text-white">Grade F</span><span class="text-xs text-slate-500">Below 33</span></div><span class="bg-slate-100 px-3 py-1 rounded-lg text-sm font-bold text-red-500">0.0</span></li>
                </ul>
            </div>
        </div>
        <div class="bg-primary/5 border border-primary/10 rounded-xl p-5">
            <h4 class="text-xs font-bold text-primary uppercase mb-4 tracking-wider">Class Summary</h4>
            <div class="space-y-4">
                <div class="flex justify-between items-center"><span class="text-sm text-slate-600">Class Average</span><span class="text-sm font-bold text-primary">@Model.ClassAverage%</span></div>
                <div class="w-full bg-slate-200 rounded-full h-1.5"><div class="bg-primary h-1.5 rounded-full" style="width: @Model.ClassAverage%"></div></div>
                <div class="grid grid-cols-2 gap-4 pt-2">
                    <div class="text-center p-2 bg-white dark:bg-surface-dark-hover rounded-lg"><p class="text-[10px] text-slate-500 dark:text-slate-400 uppercase">Highest</p><p class="text-sm font-bold text-slate-800 dark:text-white">@Model.HighestMarks</p></div>
                    <div class="text-center p-2 bg-white dark:bg-surface-dark-hover rounded-lg"><p class="text-[10px] text-slate-500 dark:text-slate-400 uppercase">Lowest</p><p class="text-sm font-bold text-slate-800 dark:text-white">@Model.LowestMarks</p></div>
                </div>
            </div>
        </div>
    </aside>
</div>
