@model RegisterViewModel
@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register | School ERP</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <script>
        (function () {
            var t = localStorage.getItem('theme');
            if (t === 'dark' || (!t && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                document.documentElement.classList.add('dark');
            }
        })();
        tailwind.config = {
            darkMode: "class",
            theme: { extend: { colors: { "primary": "#1e3fae", "background-light": "#f6f6f8", "background-dark": "#121520", "surface-dark": "#1e2130" }, fontFamily: { "display": ["Inter", "sans-serif"] }, boxShadow: { 'soft': '0 8px 24px rgba(0,0,0,0.08)' } } }
        }
    </script>
    <style>body { font-family: 'Inter', sans-serif; }</style>
</head>
<body class="bg-background-light dark:bg-background-dark min-h-screen flex flex-col items-center justify-center p-4 transition-colors duration-300">
    <!-- Theme Toggle -->
    <button id="regThemeToggle" type="button" class="fixed top-4 right-4 flex items-center justify-center size-10 rounded-xl bg-white dark:bg-surface-dark text-slate-500 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors shadow-sm border border-slate-200 dark:border-slate-700 z-50" title="Toggle theme">
        <span class="material-symbols-outlined !text-[20px] dark:hidden">dark_mode</span>
        <span class="material-symbols-outlined !text-[20px] hidden dark:inline">light_mode</span>
    </button>

    <div class="mb-8 flex flex-col items-center gap-2">
        <div class="bg-primary dark:bg-blue-600 text-white p-3 rounded-xl shadow-lg"><span class="material-symbols-outlined text-3xl">school</span></div>
        <h1 class="text-2xl font-bold text-slate-900 dark:text-white tracking-tight">School ERP</h1>
    </div>
    <main class="w-full max-w-[440px] bg-white dark:bg-surface-dark rounded-xl shadow-soft dark:shadow-none p-6 sm:p-8 border border-slate-100 dark:border-slate-700">
        <div class="text-center mb-8">
            <h2 class="text-xl font-bold text-slate-900 dark:text-white">Create Account</h2>
            <p class="text-slate-500 dark:text-slate-400 text-sm mt-1">Fill in the details below to register</p>
        </div>
        <form asp-action="Register" asp-controller="Account" method="post" class="space-y-5">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-red-600 dark:text-red-400 text-sm bg-red-50 dark:bg-red-900/30 p-3 rounded-lg"></div>
            <div class="space-y-2">
                <label class="text-sm font-medium text-slate-700 dark:text-slate-300 ml-1">Full Name</label>
                <div class="relative flex items-center">
                    <span class="material-symbols-outlined absolute left-4 text-slate-400 dark:text-slate-500 text-[20px]">person</span>
                    <input asp-for="FullName" class="w-full pl-12 pr-4 py-3.5 bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-600 rounded-xl text-slate-900 dark:text-white focus:ring-2 focus:ring-primary/20 dark:focus:ring-blue-500/30 focus:border-primary dark:focus:border-blue-500 outline-none placeholder:text-slate-400 dark:placeholder:text-slate-500" placeholder="John Doe" />
                </div>
                <span asp-validation-for="FullName" class="text-red-500 dark:text-red-400 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label class="text-sm font-medium text-slate-700 dark:text-slate-300 ml-1">Email</label>
                <div class="relative flex items-center">
                    <span class="material-symbols-outlined absolute left-4 text-slate-400 dark:text-slate-500 text-[20px]">alternate_email</span>
                    <input asp-for="Email" class="w-full pl-12 pr-4 py-3.5 bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-600 rounded-xl text-slate-900 dark:text-white focus:ring-2 focus:ring-primary/20 dark:focus:ring-blue-500/30 focus:border-primary dark:focus:border-blue-500 outline-none placeholder:text-slate-400 dark:placeholder:text-slate-500" placeholder="john@school.edu" />
                </div>
                <span asp-validation-for="Email" class="text-red-500 dark:text-red-400 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label class="text-sm font-medium text-slate-700 dark:text-slate-300 ml-1">Role</label>
                <select asp-for="Role" class="w-full py-3.5 px-4 bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-600 rounded-xl text-slate-900 dark:text-white focus:ring-2 focus:ring-primary/20 dark:focus:ring-blue-500/30 focus:border-primary dark:focus:border-blue-500 outline-none">
                    <option value="Student">Student</option>
                    <option value="Teacher">Teacher</option>
                </select>
            </div>
            <div class="space-y-2">
                <label class="text-sm font-medium text-slate-700 dark:text-slate-300 ml-1">Password</label>
                <div class="relative flex items-center">
                    <span class="material-symbols-outlined absolute left-4 text-slate-400 dark:text-slate-500 text-[20px]">lock</span>
                    <input asp-for="Password" type="password" class="w-full pl-12 pr-4 py-3.5 bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-600 rounded-xl text-slate-900 dark:text-white focus:ring-2 focus:ring-primary/20 dark:focus:ring-blue-500/30 focus:border-primary dark:focus:border-blue-500 outline-none placeholder:text-slate-400 dark:placeholder:text-slate-500" placeholder="••••••••" />
                </div>
                <span asp-validation-for="Password" class="text-red-500 dark:text-red-400 text-xs"></span>
            </div>
            <div class="space-y-2">
                <label class="text-sm font-medium text-slate-700 dark:text-slate-300 ml-1">Confirm Password</label>
                <div class="relative flex items-center">
                    <span class="material-symbols-outlined absolute left-4 text-slate-400 dark:text-slate-500 text-[20px]">lock</span>
                    <input asp-for="ConfirmPassword" type="password" class="w-full pl-12 pr-4 py-3.5 bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-600 rounded-xl text-slate-900 dark:text-white focus:ring-2 focus:ring-primary/20 dark:focus:ring-blue-500/30 focus:border-primary dark:focus:border-blue-500 outline-none placeholder:text-slate-400 dark:placeholder:text-slate-500" placeholder="••••••••" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-red-500 dark:text-red-400 text-xs"></span>
            </div>
            <button type="submit" class="w-full bg-primary dark:bg-blue-600 hover:bg-primary/90 dark:hover:bg-blue-500 text-white font-bold py-4 rounded-xl shadow-lg shadow-primary/20 dark:shadow-blue-600/20 transition-all active:scale-[0.98] flex items-center justify-center gap-2">
                Create Account <span class="material-symbols-outlined text-[20px]">arrow_forward</span>
            </button>
        </form>
        <div class="mt-8 pt-6 border-t border-slate-100 dark:border-slate-700 text-center">
            <p class="text-sm text-slate-500 dark:text-slate-400">Already have an account? <a asp-action="Login" asp-controller="Account" class="text-primary dark:text-blue-400 font-bold hover:underline underline-offset-4">Sign in</a></p>
        </div>
    </main>

    <script>
        var regToggle = document.getElementById('regThemeToggle');
        if (regToggle) {
            regToggle.addEventListener('click', function () {
                var html = document.documentElement;
                if (html.classList.contains('dark')) {
                    html.classList.remove('dark');
                    localStorage.setItem('theme', 'light');
                } else {
                    html.classList.add('dark');
                    localStorage.setItem('theme', 'dark');
                }
            });
        }
    </script>
</body>
</html>
