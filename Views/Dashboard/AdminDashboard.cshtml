@model DashboardViewModel
@{ ViewData["Title"] = "Admin Dashboard"; ViewData["UserRole"] = "Administrator"; }

<div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
    <div>
        <h1 class="text-2xl md:text-3xl font-bold text-slate-900 dark:text-white tracking-tight">Dashboard Overview</h1>
        <p class="text-slate-500 dark:text-slate-400 mt-1">Welcome back, @Model.UserName. Here's what's happening at your school today.</p>
    </div>
    <div class="flex items-center gap-3 bg-white dark:bg-surface-dark p-1.5 rounded-xl border border-slate-200 dark:border-slate-700 shadow-sm">
        <span class="px-4 py-2 bg-slate-100 dark:bg-surface-dark-hover rounded-lg text-sm font-semibold text-slate-900 dark:text-slate-100 shadow-sm">@Model.ActiveAcademicYear</span>
    </div>
</div>

<!-- Top Summary Cards -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white dark:bg-surface-dark rounded-[20px] p-6 shadow-sm border border-slate-100 dark:border-slate-700/50 flex flex-col justify-between hover:shadow-md transition-shadow group">
        <div class="flex justify-between items-start mb-4">
            <div class="size-12 rounded-xl bg-blue-50 flex items-center justify-center text-primary group-hover:bg-primary group-hover:text-white transition-colors duration-300">
                <span class="material-symbols-outlined">groups</span>
            </div>
            <span class="inline-flex items-center gap-1 text-xs font-semibold text-emerald-600 bg-emerald-50 px-2 py-1 rounded-full">
                <span class="material-symbols-outlined !text-[14px]">trending_up</span> Active
            </span>
        </div>
        <div>
            <p class="text-slate-500 dark:text-slate-400 text-sm font-medium mb-1">Total Students</p>
            <h3 class="text-3xl font-bold text-slate-900 dark:text-white tracking-tight">@Model.TotalStudents</h3>
        </div>
    </div>

    <div class="bg-white dark:bg-surface-dark rounded-[20px] p-6 shadow-sm border border-slate-100 dark:border-slate-700/50 flex flex-col justify-between hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start mb-4">
            <div class="size-12 rounded-xl bg-emerald-50 flex items-center justify-center text-emerald-600">
                <span class="material-symbols-outlined">check_circle</span>
            </div>
        </div>
        <div>
            <p class="text-slate-500 dark:text-slate-400 text-sm font-medium mb-1">Overall Attendance</p>
            <h3 class="text-3xl font-bold text-slate-900 dark:text-white tracking-tight">@Model.AttendancePercentage%</h3>
        </div>
    </div>

    <div class="bg-white dark:bg-surface-dark rounded-[20px] p-6 shadow-sm border border-slate-100 dark:border-slate-700/50 flex flex-col justify-between hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start mb-4">
            <div class="size-12 rounded-xl bg-amber-50 flex items-center justify-center text-amber-600">
                <span class="material-symbols-outlined">currency_rupee</span>
            </div>
            <span class="inline-flex items-center gap-1 text-xs font-semibold text-emerald-600 bg-emerald-50 px-2 py-1 rounded-full">Collected</span>
        </div>
        <div>
            <p class="text-slate-500 dark:text-slate-400 text-sm font-medium mb-1">Fee Collected</p>
            <h3 class="text-3xl font-bold text-slate-900 dark:text-white tracking-tight">&#x20B9;@Model.FeeCollected.ToString("N0")</h3>
        </div>
    </div>

    <div class="bg-white dark:bg-surface-dark rounded-[20px] p-6 shadow-sm border border-slate-100 dark:border-slate-700/50 flex flex-col justify-between hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start mb-4">
            <div class="size-12 rounded-xl bg-teal-50 flex items-center justify-center text-teal-600">
                <span class="material-symbols-outlined">person_pin_circle</span>
            </div>
            <span class="text-xs font-semibold text-teal-600 bg-teal-50 px-2 py-1 rounded-md">On Campus</span>
        </div>
        <div>
            <p class="text-slate-500 dark:text-slate-400 text-sm font-medium mb-1">Active Teachers</p>
            <h3 class="text-3xl font-bold text-slate-900 dark:text-white tracking-tight">@Model.TotalTeachers</h3>
        </div>
    </div>
</div>

<!-- Quick Overview -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <div class="bg-white dark:bg-surface-dark rounded-[20px] p-6 shadow-sm border border-slate-100 dark:border-slate-700/50">
        <h4 class="font-bold text-slate-900 dark:text-white text-lg mb-6">Quick Overview</h4>
        <div class="flex flex-col gap-4">
            <div class="flex items-center justify-between p-4 rounded-xl border border-slate-100 dark:border-slate-700/50 bg-slate-50/50 dark:bg-surface-dark-hover/50 hover:bg-white dark:hover:bg-surface-dark hover:shadow-md transition-all cursor-pointer">
                <div class="flex items-center gap-4">
                    <div class="size-10 rounded-lg bg-indigo-100 text-indigo-600 flex items-center justify-center">
                        <span class="material-symbols-outlined !text-[20px]">class</span>
                    </div>
                    <div class="flex flex-col">
                        <span class="text-xs text-slate-500 dark:text-slate-400 font-medium uppercase tracking-wide">Today's Classes</span>
                        <span class="font-bold text-slate-900 dark:text-white text-lg">@Model.TodayClasses<span class="text-slate-400 dark:text-slate-500 text-sm font-normal">/@Model.TotalClasses</span></span>
                    </div>
                </div>
                <div class="h-2 w-16 bg-slate-200 rounded-full overflow-hidden">
                    <div class="h-full bg-indigo-500 rounded-full" style="width: @(Model.TotalClasses > 0 ? Math.Round((double)Model.TodayClasses / Model.TotalClasses * 100) : 0)%"></div>
                </div>
            </div>
            <a asp-area="Admin" asp-controller="FeeStructure" asp-action="Index" class="flex items-center justify-between p-4 rounded-xl border border-slate-100 dark:border-slate-700/50 bg-slate-50/50 dark:bg-surface-dark-hover/50 hover:bg-white dark:hover:bg-surface-dark hover:shadow-md transition-all cursor-pointer">
                <div class="flex items-center gap-4">
                    <div class="size-10 rounded-lg bg-amber-100 text-amber-600 flex items-center justify-center">
                        <span class="material-symbols-outlined !text-[20px]">payments</span>
                    </div>
                    <div class="flex flex-col">
                        <span class="text-xs text-slate-500 dark:text-slate-400 font-medium uppercase tracking-wide">Fee Overdue</span>
                        <span class="font-bold text-slate-900 dark:text-white text-lg">&#x20B9;@Model.FeeOverdue.ToString("N0")</span>
                    </div>
                </div>
                <span class="material-symbols-outlined text-slate-400 dark:text-slate-500">chevron_right</span>
            </a>
            <a asp-area="Admin" asp-controller="Reports" asp-action="Index" class="flex items-center justify-between p-4 rounded-xl border border-slate-100 dark:border-slate-700/50 bg-slate-50/50 dark:bg-surface-dark-hover/50 hover:bg-white dark:hover:bg-surface-dark hover:shadow-md transition-all cursor-pointer">
                <div class="flex items-center gap-4">
                    <div class="size-10 rounded-lg bg-purple-100 text-purple-600 flex items-center justify-center">
                        <span class="material-symbols-outlined !text-[20px]">analytics</span>
                    </div>
                    <div class="flex flex-col">
                        <span class="text-xs text-slate-500 dark:text-slate-400 font-medium uppercase tracking-wide">Reports & Analytics</span>
                        <span class="font-bold text-slate-900 dark:text-white text-lg">View Reports</span>
                    </div>
                </div>
                <span class="material-symbols-outlined text-slate-400 dark:text-slate-500">chevron_right</span>
            </a>
        </div>
    </div>

    <div class="bg-white dark:bg-surface-dark rounded-[20px] p-6 shadow-sm border border-slate-100 dark:border-slate-700/50">
        <h4 class="font-bold text-slate-900 dark:text-white text-lg mb-6">Quick Actions</h4>
        <div class="grid grid-cols-2 gap-4">
            <a asp-area="Student" asp-controller="Admission" asp-action="Create" class="flex flex-col items-center gap-3 p-6 rounded-xl border border-slate-100 dark:border-slate-700/50 hover:border-primary/30 hover:shadow-md transition-all group">
                <div class="size-12 rounded-xl bg-blue-50 group-hover:bg-primary group-hover:text-white text-primary flex items-center justify-center transition-colors">
                    <span class="material-symbols-outlined">person_add</span>
                </div>
                <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">New Admission</span>
            </a>
            <a asp-area="Teacher" asp-controller="Attendance" asp-action="Index" class="flex flex-col items-center gap-3 p-6 rounded-xl border border-slate-100 dark:border-slate-700/50 hover:border-primary/30 hover:shadow-md transition-all group">
                <div class="size-12 rounded-xl bg-emerald-50 group-hover:bg-emerald-600 group-hover:text-white text-emerald-600 flex items-center justify-center transition-colors">
                    <span class="material-symbols-outlined">how_to_reg</span>
                </div>
                <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">Mark Attendance</span>
            </a>
            <a asp-area="Student" asp-controller="FeePayment" asp-action="Index" class="flex flex-col items-center gap-3 p-6 rounded-xl border border-slate-100 dark:border-slate-700/50 hover:border-primary/30 hover:shadow-md transition-all group">
                <div class="size-12 rounded-xl bg-amber-50 group-hover:bg-amber-600 group-hover:text-white text-amber-600 flex items-center justify-center transition-colors">
                    <span class="material-symbols-outlined">receipt_long</span>
                </div>
                <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">Collect Fee</span>
            </a>
            <a asp-area="Teacher" asp-controller="Marks" asp-action="Index" class="flex flex-col items-center gap-3 p-6 rounded-xl border border-slate-100 dark:border-slate-700/50 hover:border-primary/30 hover:shadow-md transition-all group">
                <div class="size-12 rounded-xl bg-purple-50 group-hover:bg-purple-600 group-hover:text-white text-purple-600 flex items-center justify-center transition-colors">
                    <span class="material-symbols-outlined">grading</span>
                </div>
                <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">Enter Marks</span>
            </a>
        </div>
    </div>
</div>
