@model DashboardViewModel
@{ ViewData["Title"] = "Student Portal"; ViewData["UserRole"] = "Student"; }

<div class="grid grid-cols-1 lg:grid-cols-12 gap-6 mb-10">
    <div class="lg:col-span-8 bg-gradient-to-r from-primary/10 via-transparent to-transparent rounded-[20px] p-6 sm:p-8 flex flex-col justify-center relative overflow-hidden shadow-sm border border-slate-100 bg-white dark:bg-surface-dark">
        <div class="absolute top-0 right-0 p-8 opacity-10">
            <span class="material-symbols-outlined text-[180px] text-primary">school</span>
        </div>
        <div class="relative z-10">
            <p class="text-primary dark:text-blue-400 text-sm font-bold uppercase tracking-wider mb-2">Student Portal</p>
            <h1 class="text-slate-900 dark:text-white text-3xl sm:text-4xl lg:text-5xl font-bold tracking-tight mb-2">Hello, @Model.UserName </h1>
            <p class="text-slate-500 dark:text-slate-400 text-base sm:text-lg">Academic Year: @Model.ActiveAcademicYear</p>
        </div>
    </div>
    <div class="lg:col-span-4 flex flex-col gap-4">
        <a asp-area="Student" asp-controller="Profile" asp-action="MyAttendance" class="bg-white dark:bg-surface-dark rounded-xl p-5 shadow-sm border border-slate-100 dark:border-slate-700/50 flex items-center justify-between hover:border-primary/30 transition-all">
            <div>
                <p class="text-slate-500 dark:text-slate-400 text-sm font-medium mb-1">My Attendance</p>
                <div class="flex items-baseline gap-2">
                    <h3 class="text-2xl font-bold text-slate-900 dark:text-white">@Model.AttendancePercentage%</h3>
                </div>
            </div>
            <div class="size-10 rounded-full bg-blue-50 flex items-center justify-center text-blue-600">
                <span class="material-symbols-outlined">person_check</span>
            </div>
        </a>
        <a asp-area="Student" asp-controller="FeePayment" asp-action="Index" class="bg-white dark:bg-surface-dark rounded-xl p-5 shadow-sm border border-slate-100 dark:border-slate-700/50 flex items-center justify-between hover:border-primary/30 transition-all">
            <div>
                <p class="text-slate-500 dark:text-slate-400 text-sm font-medium mb-1">Fee Status</p>
                <div class="flex items-baseline gap-2">
                    <h3 class="text-2xl font-bold text-slate-900 dark:text-white">&#x20B9;@Model.FeeCollected.ToString("N0")</h3>
                    <span class="text-emerald-600 text-xs font-bold bg-emerald-50 px-2 py-0.5 rounded-full">Paid</span>
                </div>
            </div>
            <div class="size-10 rounded-full bg-amber-50 flex items-center justify-center text-amber-600">
                <span class="material-symbols-outlined">account_balance_wallet</span>
            </div>
        </a>
        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 shadow-sm border border-slate-100 dark:border-slate-700/50 flex items-center justify-between hover:border-primary/30 transition-all">
            <div>
                <p class="text-slate-500 dark:text-slate-400 text-sm font-medium mb-1">Total Teachers</p>
                <h3 class="text-xl font-bold text-slate-900 dark:text-white">@Model.TotalTeachers</h3>
            </div>
            <div class="size-10 rounded-full bg-purple-50 flex items-center justify-center text-purple-600">
                <span class="material-symbols-outlined">group</span>
            </div>
        </div>
    </div>
</div>

<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <a asp-area="Student" asp-controller="Profile" asp-action="MyProfile" class="flex flex-col items-center gap-3 p-6 bg-white dark:bg-surface-dark rounded-xl border border-slate-100 dark:border-slate-700/50 hover:shadow-md hover:border-primary/30 transition-all group">
        <div class="size-12 rounded-xl bg-emerald-50 group-hover:bg-emerald-600 group-hover:text-white text-emerald-600 flex items-center justify-center transition-colors">
            <span class="material-symbols-outlined">badge</span>
        </div>
        <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">My Profile</span>
    </a>
    <a asp-area="Student" asp-controller="FeePayment" asp-action="Index" class="flex flex-col items-center gap-3 p-6 bg-white dark:bg-surface-dark rounded-xl border border-slate-100 dark:border-slate-700/50 hover:shadow-md hover:border-primary/30 transition-all group">
        <div class="size-12 rounded-xl bg-amber-50 group-hover:bg-amber-600 group-hover:text-white text-amber-600 flex items-center justify-center transition-colors">
            <span class="material-symbols-outlined">receipt_long</span>
        </div>
        <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">My Fees</span>
    </a>
    <a asp-area="Student" asp-controller="Profile" asp-action="MyAttendance" class="flex flex-col items-center gap-3 p-6 bg-white dark:bg-surface-dark rounded-xl border border-slate-100 dark:border-slate-700/50 hover:shadow-md hover:border-primary/30 transition-all group">
        <div class="size-12 rounded-xl bg-purple-50 group-hover:bg-purple-600 group-hover:text-white text-purple-600 flex items-center justify-center transition-colors">
            <span class="material-symbols-outlined">calendar_month</span>
        </div>
        <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">My Attendance</span>
    </a>
    <a asp-area="" asp-controller="ReportDownload" asp-action="StudentReportCard" asp-route-studentId="@ViewBag.StudentId" class="flex flex-col items-center gap-3 p-6 bg-white dark:bg-surface-dark rounded-xl border border-slate-100 dark:border-slate-700/50 hover:shadow-md hover:border-primary/30 transition-all group">
        <div class="size-12 rounded-xl bg-blue-50 group-hover:bg-primary group-hover:text-white text-primary flex items-center justify-center transition-colors">
            <span class="material-symbols-outlined">description</span>
        </div>
        <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">Report Card</span>
    </a>
</div>
